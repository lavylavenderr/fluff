// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Actions {
  id         Int    @id @default(autoincrement())
  discord_id String @unique
  given      Int    @default(0)
  bark       Int    @default(0)
  bite       Int    @default(0)
  boop       Int    @default(0)
  hug        Int    @default(0)
  kiss       Int    @default(0)
  nuzzle     Int    @default(0)
  pet        Int    @default(0)
  poke       Int    @default(0)
  slap       Int    @default(0)
  spank      Int    @default(0)
}

model Blacklist {
  id       Int    @id @default(autoincrement())
  guild_id String @unique
  reason   String @default("No reason given.")
}
