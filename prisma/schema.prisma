generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Action {
  type       String
  recieverId String
  discordId  String

  User User @relation(fields: [discordId], references: [discordId])
  id   Int  @id @default(autoincrement())

  @@index([discordId])
}

model User {
  discordId String   @unique
  actions   Action[]
}

model Guild {
  guildId String  @unique
  prefix  String? @default("-")
}
